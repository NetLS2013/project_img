<?xml version="1.0" encoding="utf-8"?>
<Application
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="project_img.App"
    >
    <Application.Resources>
        <ResourceDictionary>
            <Style
                TargetType="Button"
                >
                <Setter
                    Property="BorderRadius"
                    Value="3" />
                <Setter
                    Property="BackgroundColor"
                    Value="#818181" />
                <Setter
                    Property="TextColor"
                    Value="#ffffff" />
            </Style>
            
            <Style
                TargetType="Entry"
                >
                <Setter
                    Property="FontSize"
                    Value="14" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>