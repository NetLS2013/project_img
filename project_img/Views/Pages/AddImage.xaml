<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="project_img.Views.Pages.AddImage"
    xmlns:commons="clr-namespace:project_img.Views.Commons;assembly=project_img"
    >
    <commons:Container
        Spacing="8"
        >
        <StackLayout
            BackgroundColor="#b6b6b6"
            Padding="3"
            >
            <StackLayout
                BackgroundColor="#d8d8d8"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                >
                <Image
                    x:Name="Image"
                    Source="thumbnail.png"
                    Aspect="AspectFill"
                    HeightRequest="175"
                    />
            </StackLayout>
        </StackLayout>
        
        <Entry
            Margin="0,16,0,0"
            Text="{Binding Description}"
            Placeholder="Descripption"
            />
        <Entry
            Text="{Binding HashTag}"
            Placeholder="#hashtag"
            />
        <Button
            Command="{Binding UploadCommand}"
            Text="Upload"
            Margin="0,30,0,0"
            />
        <commons:ValidationErrors
            ItemsSource="{Binding Errors}"
            />
    </commons:Container>
</ContentPage>
