<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    x:Class="project_img.Views.Pages.GenerateGif"
    xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:renderer="clr-namespace:project_img.CustomRenderer;assembly=project_img"
    BackgroundColor="#bfeeeeee"
    >
    <renderer:BorderLayout
        Margin="30"
        VerticalOptions="CenterAndExpand"
        HeightRequest="250"
        >
        <ff:CachedImage
            Aspect="AspectFit"
            Source="{Binding GeneratedGif}"
            DownsampleToViewSize="True"
            LoadingPlaceholder="gif_icon.png"
            ErrorPlaceholder="gif_icon.png"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            />
    </renderer:BorderLayout>
</pages:PopupPage>